<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textSize="28dp"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="50dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moon"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This month"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textSize="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnSpending"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Spending  $0.00"
                android:textAlignment="textEnd"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB2AD"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:backgroundTint="#F1D7D8">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher_arrow"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnIncome"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Income    $0.00"
                android:textAlignment="textEnd"
                android:layout_margin="10dp"
                android:backgroundTint="#009851"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:backgroundTint="#B7EBB2">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher_arrow1"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/homeProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicatorSize="300dp"
            app:trackThickness="26dp"
            app:indicatorColor="#3966C8"
            app:trackColor="#2B2B2B" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF">

        <TextView
            android:id="@+id/savingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Balance"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/savingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/homeSpentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Spent: 0%"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </FrameLayout>

    <include layout="@layout/bottom_navigator"/>
</LinearLayout>